{
  "name": "bkmexpress",
  "version": "1.0.0",
  "description": "Nodejs api for bkm express payment system (Turkey)",
  "main": "./lib/bkmexpress.js",
  "typings": "./lib/bkmexpress.d.ts",
  "scripts": {
    "lint": "tslint src/*.ts --config tslint.json --project tsconfig.json --fix",
    "tsc": "tsc",
    "build": "rimraf lib && npm run tsc",
    "pretest": "npm run build && tsc --target ES6 --module CommonJS --moduleResolution Node test/*.ts",
    "test": "make test",
    "preversion": "npm run lint && npm test",
    "version": "git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brendtumi/bkmexpress.git"
  },
  "keywords": [
    "BKM",
    "bkm express",
    "turkey",
    "payment system",
    "payment integration",
    "bex2",
    "bkm-exp"
  ],
  "author": "Tümay Çeber <tumayceber@gmail.com> (https://about.me/tumayceber)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendtumi/bkmexpress/issues"
  },
  "homepage": "https://github.com/brendtumi/bkmexpress",
  "dependencies": {
    "@types/node": "^7.0.12",
    "@types/semver": "^5.3.31",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "rimraf": "^2.6.1"
  },
  "engines": {
    "node": ">0.10.0"
  }
}
